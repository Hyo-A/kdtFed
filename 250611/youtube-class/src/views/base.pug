doctype html
html(lang="ko")
  head
    title #{pageTitle} | #{sitename}
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1 #{sitename}
      nav 
        ul 
          li 
            a(href="/") Home
          li 
            a(href="/videos/upload") Upload Video
          li 
            a(href="/search") Search
          if loggedIn
            li 
              a(href="/my-profile") #{loggedInUser.name}님의 Profile
            li 
              a(href="/logout") Logout
          else
            li 
              a(href="/join") Join
            li 
              a(href="/login") Login
    main
      block content
      include partials/footer.pug